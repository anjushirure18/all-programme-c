/*************AREA OF TRIANGLE*****************************






         #include<stdio.h>
          int main()
          {
                int height,base;
                float area;
                printf("Enter height and base:");
                scanf("%d%d",&height,&base);
                area=0.5*height*base;
                printf("area of triangle=%f",area);
        return 0;
           }

/********************OUTPUT*********************






